<%= content_tag :h1, "Edit School Class Form" %>

<%= form_for @school_class do |f| %>

  <%= label_tag :school_class_title, "Class title:" %><br>
  <%= f.text_field :title %><br>

  <%= label_tag :school_class_room_number, "Class room number:" %><br>
  <%= f.text_field :room_number %><br>

  <%= f.submit %>

<% end %>
